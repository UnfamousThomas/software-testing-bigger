<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.scene.text.Text?>
<SplitPane styleClass="background_style" dividerPositions="0.6" orientation="VERTICAL" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <items>
        <TitledPane alignment="CENTER" animated="false" styleClass="background_style" collapsible="false" text="Purchase History">
            <BorderPane styleClass="background_style">
                <center>
                    <TableView fx:id="historyTableView" styleClass="blue_style background_style" BorderPane.alignment="CENTER">
                        <columns>
                            <TableColumn text="Id">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Date and time">
                                <cellValueFactory>
                                    <PropertyValueFactory property="formattedDateAndTime" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Total cost">
                                <cellValueFactory>
                                    <PropertyValueFactory property="totalCost" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Total amount of products">
                                <cellValueFactory>
                                    <PropertyValueFactory property="totalAmountOfProducts" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Cashier">
                                <cellValueFactory>
                                    <PropertyValueFactory property="cashier" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </center>
                <top>
                    <HBox alignment="CENTER_LEFT">
                        <Button onMouseClicked="#refreshButtonClicked" text="Show history (refresh)" />
                        <Button onMouseClicked="#showLastTenPurchasesClicked" text="Show last 10 purchases" />
                        <DatePicker promptText="Enter first date" onAction="#getFirstDate" fx:id="firstDatePicker"/>
                        <DatePicker promptText="Enter second date" onAction="#getSecondDate" fx:id="secondDatePicker"/>
                        <Button onMouseClicked="#showPurchasesBetweenDatesClicked" text="Show purchases between dates" />
                    </HBox>
                </top>
            </BorderPane>
        </TitledPane>

        <TitledPane alignment="CENTER" animated="false" styleClass="background_style" collapsible="false" text="Purchase information">
            <BorderPane styleClass="background_style">
                <center>
                    <TableView fx:id="purchaseTableView" styleClass="blue_style background_style" BorderPane.alignment="CENTER">
                        <columns>
                            <TableColumn text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="name" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Quantity">
                                <cellValueFactory>
                                    <PropertyValueFactory property="quantity" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Price">
                                <cellValueFactory>
                                    <PropertyValueFactory property="price" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </center>
                <top>
                </top>
            </BorderPane>
        </TitledPane>
    </items>
</SplitPane>