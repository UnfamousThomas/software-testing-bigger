<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<SplitPane styleClass="background_style" dividerPositions="0.4" orientation="VERTICAL" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
  <items>
    <GridPane prefWidth="214.0" styleClass="nice-green">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <Label text="Bar Code:" />
        <Label layoutX="10.0" layoutY="39.0" text="Amount:" GridPane.rowIndex="1" />
        <Label layoutX="10.0" layoutY="39.0" text="Name:" GridPane.rowIndex="2" />
        <Label layoutX="10.0" layoutY="39.0" text="Price:" GridPane.rowIndex="3" />
        <Button onAction="#addProductButtonClicked" alignment="CENTER" mnemonicParsing="false" text="Add Product" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2" />
        <TextField fx:id="barCodeField" GridPane.columnIndex="1" />
        <TextField fx:id="quantityField" layoutX="10.0" layoutY="27.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" layoutX="10.0" layoutY="27.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="priceField" layoutX="10.0" layoutY="27.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      </children>
    </GridPane>
    <TitledPane alignment="CENTER" animated="false" styleClass="background_style" collapsible="false" text="Warehouse status">
      <BorderPane styleClass="background_style">
        <center>
          <TableView fx:id="warehouseTableView" styleClass="blue_style background_style" BorderPane.alignment="CENTER">
            <columns>
              <TableColumn text="Id">
                <cellValueFactory>
                  <PropertyValueFactory property="id" />
                </cellValueFactory>
              </TableColumn>
              <TableColumn text="Name">
                <cellValueFactory>
                  <PropertyValueFactory property="name" />
                </cellValueFactory>
              </TableColumn>
              <TableColumn text="Price">
                <cellValueFactory>
                  <PropertyValueFactory property="price" />
                </cellValueFactory>
              </TableColumn>
              <TableColumn text="Quantity">
                <cellValueFactory>
                  <PropertyValueFactory property="quantity" />
                </cellValueFactory>
              </TableColumn>
            </columns>
            <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
        </center>
        <top>
          <Button onMouseClicked="#refreshButtonClicked" text="Refresh warehouse" BorderPane.alignment="TOP_LEFT" />
        </top>
      </BorderPane>
    </TitledPane>
  </items>
</SplitPane>